[extensions]
extdiff =
pager =
progress =
purge =
hgk=
graphlog=
rebase=
histedit =
mq =
record =
transplant =
highlight=
record=
schemes=
color=
#shelve = ~/.hg-ext/hgshelve/hgshelve.py
#collapse = ~/.hg-ext/hgcollapse/collapse.py
hgsubversion = ~/.hg-ext/hgsubversion/hgsubversion
hggit = ~/.hg-ext/hg-git/hggit

[alias]
ll = log --graph --style compact --limit 6 -r 'sort((::. or bookmark()), "-rev")'
ls = log --template '{rev} {node|short} | {date|shortdate} | {author|user}: {desc|strip|firstline}\n'
lg = glog -l15 --template '\033[33;40m{rev} \033[37;40m{desc|firstline|fill68} \033[1;30;40m({date|age} ago by {author|person})\033[0;37;40m \033[33;40m{tags}\033[37;40m \033[35;40m{branches}\033[37;40m\n\n'
lga = lg -l1000000000
cm = commit --message
up = update --check
d = diff -p --color=auto
egrep = !$HG locate -0 '$2' $3 $4 $5 $6 $7 $8 $9 | xargs -0 egrep -H '$1'

[defaults]
qimport = --git
qrefresh = --git
annotate = -nu
heads = --style default
serve = -v
#outgoing = --graph
#incoming = --graph
diff = -p

[color]
mode = ansi
status.ignored = magenta bold
qseries.unapplied = magenta bold
qseries.applied = blue bold underline
qseries.missing = red bold
diff.diffline = bold
diff.extended = cyan bold
diff.file_a = red bold
diff.file_b = green bold
diff.hunk = magenta
diff.deleted = red
diff.inserted = green
diff.changed = white
diff.trailingwhitespace = bold red_background


